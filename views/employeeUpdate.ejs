<!-- employeeUpdate.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Employee</title>
  <link rel="stylesheet" href="/employeeAdd.css">
</head>
<body>
  <div class="container">
    <h1>Edit Employee</h1>
    <form action="/employee/<%= employee._id %>" method="POST" enctype="application/x-www-form-urlencoded">
      <!-- Basic Information Section -->
      <div class="form-section">
        <h2>Basic Information</h2>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= employee.name %>" required><br><br>

        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" value="<%= employee.phone %>" required><br><br>

        <label for="age">Age:</label>
        <input type="text" id="age" name="age" value="<%= employee.age %>" required><br><br>

        <label for="position">Position:</label>
        <input type="text" id="position" name="position" value="<%= employee.position %>" required><br><br>

        <label for="shopName">Shop Name:</label>
        <input type="text" id="shopName" name="shopName" value="<%= employee.shopName %>" required><br><br>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn submit-btn">Update Employee</button>
    </form>
  </div>
</body>
</html>
